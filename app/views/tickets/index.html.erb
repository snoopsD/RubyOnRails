<div class="row">
  <h3>Билеты</h3>
    <% current_user.tickets.each do |ticket| %>
      <table class="table table-striped">
        <td> <%= link_to ticket.id, ticket_path(ticket) %> </td>
        <td><%= link_to t('common.delete'), ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </table>
<br />
<%= link_to t('common.root'), root_path%>
</div>
