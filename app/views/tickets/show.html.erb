        <td><%= @ticket.start_station.title%></td>
        <td><%= @ticket.end_station.title %></td>
      </tr>
    </tbody>
  </table>
<div class="btn-group">
  <%= link_to t('common.back'), tickets_path, class: "btn btn-xs btn-primary"%>
</div>
