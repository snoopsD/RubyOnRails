<p><b> Пользователь: </b> <%= @ticket.user.email%></p>

<table class="table table-striped">
    <thead>
      <tr>
        <th>ФИО</th>
        <th>Поезд №</th>
        <th>Начальная станция</th>
        <th>Конечная станция</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @ticket.surname %> <%= @ticket.name %> <%= @ticket.patronymic %></td>
